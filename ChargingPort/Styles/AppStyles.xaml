<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <!-- Text styles -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource OnPrimaryColor}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="SubheaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceColor}"/>
    </Style>

    <Style x:Key="StationNameTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceColor}"/>
    </Style>

    <Style x:Key="PriceTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantColor}"/>
    </Style>

    <Style x:Key="InfoTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{ThemeResource OutlineColor}"/>
    </Style>

    <Style x:Key="NavButtonTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,3,0,0"/>
    </Style>

    <!-- Button styles -->
    <Style x:Key="TransparentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Icon styles -->
    <Style x:Key="HeaderIconStyle" TargetType="FontIcon">
        <Setter Property="Foreground" Value="{ThemeResource OnPrimaryColor}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="StationIconStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="InfoIconStyle" TargetType="FontIcon">
        <Setter Property="Foreground" Value="{ThemeResource OutlineColor}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="NavIconStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Container styles -->
    <!-- Card Style for Uno Toolkit Card -->
    <Style x:Key="StationCardStyle" TargetType="utu:Card">
        <Setter Property="Padding" Value="15"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Background" Value="{ThemeResource SurfaceVariantColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Elevation" Value="2"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="MainCardStyle" TargetType="utu:Card">
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Background" Value="{ThemeResource SurfaceColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource OutlineColor}"/>
        <Setter Property="Elevation" Value="4"/>
        <Setter Property="Margin" Value="20"/>
    </Style>

    <Style x:Key="AvailabilityBadgeStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="10,5,10,5"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- InfoBar Style -->
    <Style x:Key="AvailabilityInfoBarStyle" TargetType="InfoBar">
        <Setter Property="IsClosable" Value="False"/>
        <Setter Property="IsOpen" Value="True"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="MaxWidth" Value="150"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- ListView styles -->
    <Style x:Key="ChargingStationListViewItemStyle" TargetType="ListView">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,5,0,5"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- DropDownButton Style -->
    <Style x:Key="FilterDropDownButtonStyle" TargetType="DropDownButton">
        <Setter Property="Background" Value="{ThemeResource SurfaceVariantColor}"/>
        <Setter Property="Foreground" Value="{ThemeResource OutlineColor}"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="8,5,8,5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
